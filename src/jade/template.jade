doctype html
html
  head
    meta(charset='utf-8')
    title
      | Chapter
      = ' '+chapter+': '
      block title
    link(rel='stylesheet', href='css/main.css')
    script(src='js/jquery-2.1.1.min.js')
    block head
  body
    .main
      .auto.dnav
        if chapter>0
          .fleft
            a(href='chapter'+(chapter-1)+'.html') prev
            .small
              = titles[chapter-1]
        if chapter<chapters
          .fright.tright
            a(href='chapter'+(chapter+1)+'.html') next
            .small
              = titles[chapter+1]
      .quote
        block quote
      .qauthor
        block qauthor
      .title
        | Chapter
        = ' '+chapter+': '+titles[chapter]
      hr.grad.space
      block main
      .auto.dnav
        if chapter>0
          .fleft
            a(href='chapter'+(chapter-1)+'.html') prev
            .small
              = titles[chapter-1]
        if chapter<chapters
          .fright.tright
            a(href='chapter'+(chapter+1)+'.html') next
            .small
              = titles[chapter+1]
